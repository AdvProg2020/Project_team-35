<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewControllers.RegisterPageController">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <TextField fx:id="username" promptText="userName" GridPane.rowIndex="0"/>
    <PasswordField fx:id="password" promptText="password" GridPane.rowIndex="1"/>
    <TextField fx:id="name" promptText="name" GridPane.rowIndex="2"/>
    <TextField fx:id="lastName" promptText="lastName" GridPane.rowIndex="3"/>
    <TextField fx:id="email" promptText="email" GridPane.rowIndex="4"/>
    <TextField fx:id="phone" promptText="phoneNumber" GridPane.rowIndex="5"/>
    <TextField fx:id="type" promptText="type" GridPane.rowIndex="6" onAction="#showCompanyOrNot"/>
    <TextField disable="true" fx:id="company" promptText="company name" GridPane.rowIndex="7"/>
    <Button onMouseClicked="#confirm" text="confirm" GridPane.rowIndex="8"/>
    <Button text="back" GridPane.rowIndex="9" onMouseClicked="#back"></Button>
    <Label text="" GridPane.rowIndex="10" fx:id="problem"/>
</GridPane>
